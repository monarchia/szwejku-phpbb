{# 
 # partials/global_header.html.twig
 #}
<header id="global-header" class="responsive-hide">
{% block header %}
   <a title="{{ L_SITE_HOME }}" class="logo" href="{{ BOARD_URL }}">
      <img src="{{ T_THEME_PATH }}/images/banner.png" alt="{{ SITENAME }}">
   </a>
<nav class="user-menu">
   {% if S_USER_LOGGED_IN %}
   <a class="button" href="{{ U_PROFILE }}">
      {% if CURRENT_USER_AVATAR %}
      {{ CURRENT_USER_AVATAR }} 
      {% else %}
      <img class="avatar" src="{{ T_THEME_PATH }}/images/no_avatar.gif" width="447" height="500">   
      {% endif %}
      {{ CURRENT_USERNAME_SIMPLE }}
   </a>
   {% if S_NOTIFICATIONS_DISPLAY %}
   <span class="dropdown-container dropdown-{S_CONTENT_FLOW_END}">
      <a href="{U_VIEW_ALL_NOTIFICATIONS}" title="{{ L_NOTIFICATIONS }}" id="notification_list_button" class="dropdown-trigger {{ NOTIFICATIONS_COUNT ? 'unread' }} button">
         <i class="icon fa-bell fa-fw" aria-hidden="true"></i> {{ NOTIFICATIONS_COUNT }}
      </a> 
   <!-- INCLUDE notification_dropdown.html -->
</span>
   {% endif %}
   {% if S_DISPLAY_PM %}
   <a class="button {{ PRIVATE_MESSAGE_COUNT ? 'unread' }}" href="{U_PRIVATEMSGS}" role="menuitem">
      <i class="icon fa-envelope fa-fw" aria-hidden="true" title="{{ L_PRIVATE_MESSAGES }}"></i> {{ PRIVATE_MESSAGE_COUNT }}
      </a>
   {% endif %}
   {% if U_ACP %}
   <a class="button" title="Administracja" href="{{ U_ACP }}">
      <i class="icon fa-shield fa-fw"></i>
   </a>  
   {% endif %}
   <a class="button" href="{{ U_LOGIN_LOGOUT }}" title="Wyloguj">
      <i class="icon fa-power-off fa-fw" aria-hidden="true"></i>
   </a>
   {% else %}
   <a class="button" href="{{ U_LOGIN_LOGOUT }}" role="menuitem">
      <i class="icon fa-user-circle-o fa-fw" aria-hidden="true"></i>{{ L_LOGIN_LOGOUT }}
   </a>
   {% endif %}
</nav>
{% endblock header %}
</header>
